{
  "workspace": [
    "./projects/api",
    "./projects/playground",
    "./projects/swagger",
    "./projects/client"
  ],
  "tasks": {
    "reinstall": "deno install --allow-scripts --reload",
    "install": "deno install --allow-scripts",
    "format": "deno fmt && deno lint --fix",
    "swagger": "cd projects/swagger && deno task start",
    "swagger:dev": "cd projects/swagger && deno task dev",
    "playground:dev": "cd projects/playground && deno run dev",
    "client:dev": "cd projects/client && deno run dev"
  },
  "nodeModulesDir": "auto",
  "fmt": {
    "singleQuote": true,
    "indentWidth": 2
  },
  "compilerOptions": {
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "strict": true
  }
}
